{
  "name": "top-6",
  "version": "2.6.0",
  "description": "Process which compute top 6.",
  "private": true,
  "engines": {
    "node": "20"
  },
  "main": "dist/functions.js",
  "scripts": {
    "postinstall": "ts-patch install -s",
    "start": "node dist/main.js",
    "start:dev": "TS_NODE_PROJECT=tsconfig.dev.json ts-node-dev --respawn --transpile-only src/main.ts",
    "clean": "rimraf coverage build dist tmp",
    "prebuild": "npm run lint",
    "build": "npm run build:esbuild",
    "build:tsc": "tsc -p tsconfig.json",
    "build:esbuild": "esbuild src/main.ts --bundle --platform=node --target=node18 --outfile=dist/main.js --format=cjs --keep-names --external:exceljs --external:firebase-admin --external:axios",
    "build:watch": "esbuild src/main.ts --bundle --platform=node --target=node18 --outfile=dist/main.js --format=cjs --keep-names --watch",
    "build:release": "npm run clean && esbuild src/main.ts --bundle --platform=node --target=node18 --outfile=dist/main.js --format=cjs --minify --keep-names --external:exceljs --external:firebase-admin",
    "lint": "eslint . --ext .ts",
    "test": "jest --coverage --runInBand",
    "test:watch": "jest --watch",
    "generate:openapi": "openapi-generator-cli generate -i https://api-v2.beping.be/doc-json -g typescript-axios -o src/common/tabt-client --additional-properties enumNameSuffix=tabt --additional-properties useSingleRequestParameter=true --skip-validate-spec",
    "release": "release-it",
    "docker:build": "docker build -t top-6:latest .",
    "docker:run": "docker run --rm top-6:latest",
    "docker:build:ghcr": "docker build -t ghcr.io/$GITHUB_REPOSITORY:latest .",
    "docker:push:ghcr": "docker push ghcr.io/$GITHUB_REPOSITORY:latest",
    "docker:compose:up": "docker-compose up",
    "docker:compose:up:detached": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:compose:build": "docker-compose build",
    "docker:compose:restart": "docker-compose restart",
    "dev": "npm run start:dev",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:docker:detached": "docker-compose -f docker-compose.dev.yml up -d --build",
    "dev:docker:down": "docker-compose -f docker-compose.dev.yml down",
    "dev:docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:build:scheduled": "docker build -f Dockerfile.scheduled -t top-6:scheduled .",
    "docker:compose:scheduled:up": "docker-compose -f docker-compose.scheduled.yml up -d",
    "docker:compose:scheduled:down": "docker-compose -f docker-compose.scheduled.yml down",
    "docker:compose:scheduled:logs": "docker-compose -f docker-compose.scheduled.yml logs -f",
    "docker:compose:scheduled:restart": "docker-compose -f docker-compose.scheduled.yml restart"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "2.21.4",
    "@types/jest": "29.5.4",
    "@types/lodash": "4.14.198",
    "@types/node": "20.6.0",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "bun-types": "^1.0.1",
    "esbuild": "^0.20.0",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jest": "27.2.3",
    "firebase-functions": "^4.4.1",
    "jest": "29.6.4",
    "jest-ts-auto-mock": "2.1.0",
    "prettier": "3.0.3",
    "release-it": "16.1.5",
    "rimraf": "5.0.1",
    "ts-auto-mock": "3.7.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "2.0.0",
    "ts-patch": "3.0.2",
    "tsutils": "3.21.0",
    "typescript": "5.2.2"
  },
  "author": "Florent Cardoen <Fllorent0D@users.noreply.github.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@release-it/conventional-changelog": "7.0.1",
    "axios": "1.5.0",
    "axios-retry": "3.7.0",
    "chalk": "4.1.2",
    "date-fns": "2.30.0",
    "dotenv": "16.3.1",
    "exceljs": "4.3.0",
    "fb": "2.0.0",
    "firebase-admin": "11.10.1",
    "lodash": "4.17.21",
    "node-mailjet": "6.0.4",
    "openai": "^5.12.2",
    "random-ipv4": "1.0.2",
    "rxjs": "7.8.1",
    "tslib": "2.6.2"
  },
  "volta": {
    "node": "16.13.0"
  }
}
